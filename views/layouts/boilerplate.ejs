<!-- Basic boilerplate for every single page to start-->

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>YelpCamp</title>

    <!-- link Bootstrap5-->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
        rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
        crossorigin="anonymous">

    <!-- MapBox GL JS API, tool to render interactive maps -->
    <script src='https://api.mapbox.com/mapbox-gl-js/v2.7.0/mapbox-gl.js'></script>
    <link href='https://api.mapbox.com/mapbox-gl-js/v2.7.0/mapbox-gl.css' rel='stylesheet' />
    
    <!-- link to basic styles -->
    <link rel="stylesheet" href="/stylesheets/app.css">

</head>

<!-- give body minimum height to force footer to go to the bottom 
     using flex box, give max height of 100
-->
<body class="d-flex flex-column vh-100">
    <!-- include navbar partial in our boilerplate-->
    <!-- ../partials/navbar is the path to the file ../ means the parent of the current directory-->
    <%-include("../partials/navbar")%>

    <main class="container mt-3">
        <!-- include flash partial .. go up one level into partials into flash-->
        <%-include("../partials/flash")%>
        <!-- body will be inserted here when referenced with layout("layouts/boilerplate") -->
        <%-body%>
    </main>

    <!-- include foot partial in our boilerplate-->
    <!-- ../partials/footer is the path to the file ../ means the parent of the current directory-->
    <%-include("../partials/footer")%>

    <!-- include every Bootstrap JavaScript plugin and depencdency -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>

    <!-- bs-custom-file-input using this to display file names for multiple inputs -->
    <script src="https://cdn.jsdelivr.net/npm/bs-custom-file-input/dist/bs-custom-file-input.min.js"></script>

    <!-- script for validating forms -->
    <script src="/javascripts/validateForms.js"></script>

</body>

</html>